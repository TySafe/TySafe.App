{
    "Serilog": {
        "Using": [ 
            "Serilog.Sinks.Console", 
            "Serilog.Sinks.File", 
            "Serilog.Sinks.File.Gzip"
        ],
        
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Default": "Information",
                "Microsoft": "Warning",
                "Microsoft.Hosting.Lifetime": "Information"
            }
        },

        "Enrich": [ "FromLogContext", "WithAssemblyName" ],
        
        "WriteTo": [
            { "Name": "Console" }
            
            /*{ 
                "Name": "File", 
                
                "Args": {
                    "Path": "./logs/tysafe.log.gz", 
                    "FileSizeLimit": "10MB", 
                    "RollingInterval": "Day",
                    "Hooks": "Serilog.Sinks.File.GZip.GZipHooks, Serilog.Sinks.File.GZip"
                } 
            }*/
        ]
    }
}